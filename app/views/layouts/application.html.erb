<!DOCTYPE html>
<html>
  <head>
    <title>The Mad Year Times Wordcross</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    
    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <script type="text/javascript">
      // raster images
      window.main_myt_logo = "<%= image_url('main_myt_logo.png') %>";
      window.myt_logo = "<%= image_url('mytimes_logo.png') %>";
      window.demo_logo = "<%= image_url('demo_logo.png') %>";
      window.fake_logo = "<%= image_url('fake_logo.png') %>";
      window.banana_logo = "<%= image_url('banana_logo.png') %>";
      window.checkbox = "<%= image_url('checkbox.png') %>";
      window.dummy_ad = "<%= image_url('dummy_ad.jpg') %>";
      // svg images
      window.arrow = "<%= image_url('arrow.svg') %>%";
      window.word_wasp = "<%= image_url('word_wasp.svg') %>%";
      window.ricochet = "<%= image_url('ricochet.svg') %>%";
      window.micro_large = "<%= image_url('micro_large.svg') %>%";
      window.micro_small = "<%= image_url('micro_small.svg') %>%";
      window.wordcross_large_inactive = "<%= image_url('wordcross_large_inactive.svg') %>%";
      window.wordcross_large_active = "<%= image_url('wordcross_large_active.svg') %>%";
      window.wordcross_small = "<%= image_url('wordcross_small.svg') %>%";
      window.subscribe_ribbon = "<%= image_url('subscribe_ribbon.svg') %>%";
      window.linoleum = "<%= image_url('linoleum.svg') %>%";
      window.nexus = "<%= image_url('nexus.svg') %>%";
    </script>
  </head>

  <body>
    <%= yield %>
  </body>
</html>
